<!DOCTYPE html>
<html ng-app="homer">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title page-title></title>
    <link rel="icon" type="image/png" href="/images/favicon.png" />
    @Styles.Render("~/bundles/app_styles")

    <link href="/styles/kendo/kendo.common.min.css" rel="stylesheet" />
    <link href="/styles/kendo/kendo.default.min.css" rel="stylesheet" />
    <link href="/styles/kendo/kendo.dataviz.min.css" rel="stylesheet" />
    <link href="/styles/kendo/kendo.dataviz.default.min.css" rel="stylesheet" />
    <link href="/js/angular-ui/ui-grid/ui-grid.min.css" rel="stylesheet" />
 
    <link href="~/Content/nifty.min.css" rel="stylesheet">


    <link href="~/Content/font-awesome.min.css" rel="stylesheet">


    @if (Convert.ToBoolean(System.Configuration.ConfigurationManager.AppSettings["Cache.Bust"]))
    {
        <script>
            var CACHE_BUST_SUFFIX = '?rnd=' + new Date().getTime();
        </script>
    }
    else
    {
        <script>
            var CACHE_BUST_SUFFIX = '';
        </script>
    }
</head>
<body ng-controller="appCtrl" class="{{$state.current.data.specialClass}}" landing-scrollspy tour backdrop="true">
    <div class="splash">
        <div class="splash-title">

            <img src="/images/loading-bars.svg" width="64" height="64" />
        </div>
    </div>

    @RenderBody()

    <!--  @Scripts.Render("~/bundles/jquery")
         @Scripts.Render("~/bundles/bootstrap")
         @RenderSection("scripts", required: false)

        -->
    @Scripts.Render("~/bundles/bower_components")


    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    <script src="~/app/scripts/app.js"></script>
    <script src="~/app/scripts/config.js"></script>
    <script src="~/app/scripts/directives/directives.js"></script>


    @Scripts.Render("~/bundles/app_scripts")

    <script src="~/js/es5-shim.min.js"></script>
    <script src="~/js/es5-sham.min.js"></script>
    <script src="/js/kendo.all.min.js"></script>
    <script type="text/javascript" src="/bower_components/spin.js/spin.min.js"></script>
    <script type="text/javascript" src="/bower_components/angular-spinner/angular-spinner.min.js"></script>


    <span id="page-loaded"></span>

</body>
</html>
